FROM rocker/r-ver:4.3.1
LABEL maintainer="brancengregory"
RUN export DEBIAN_FRONTEND=noninteractive; apt-get -y update \
  && apt-get install -y git-core \
	libpq-dev \
	libxml2-dev \
	libssl-dev \
	unixodbc-dev \
	odbc-postgresql \
	libudunits2-dev \
	libproj-dev \
	libgdal-dev \
	libmagick++-dev \
	libharfbuzz-dev \
	libfribidi-dev \
	libsodium-dev
ENV R_CONFIG_ACTIVE=docker_test
RUN ["install2.r", "remotes", "here"]
RUN ["installGithub.r", "openjusticeok/eviction-addresses@test"]
WORKDIR /workspace/
COPY config.yml .
COPY eviction-addresses-service-account.json .
COPY shiny-apps-certs/ ./shiny-apps-certs
CMD ["R", "-e", "evictionAddresses::run_job('config.yml')"]
